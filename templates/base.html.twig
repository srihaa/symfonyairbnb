        {% endblock %}

        
    </head>
<style>
.hello{
        font-size: x-large;
    font-family: 'Times New Roman', Times, serif;
    font-weight: 100;
    font-style: italic;
    
}
.logout{
    margin-right:30px;
    
}
.lin{
    padding-left:20px;
    font-family: 'Times New Roman', Times, serif;
    font-weight: 100;
    font-size: large;
    font-style: italic;
    
    
}

</style>



    <body>

    <header>
    
<nav class="navbar navbar-light" style="background-color:#E3E3E3;">
  
    {% if app.user %}
      
            <a class="hello" >Hello <span style="color:red"> {{app.user.firstName}}</span></a>

            
            <a class="lin" href="{{path('properties')}}">My Properties</a>


            <a style="margin: auto; text-align:center; "  href="{{path('airbnb')}}">
         <img  src="assets/img/logo.png" alt="Site logo">                            
     </a>
     <a style="margin-right:20px;" class="lin btn btn-success" href="#">Add Properties</a>
     <a class=" btn btn-primary" href="{{path('app_logout')}}">Log Out</a>

     {% else %}
     
     <a style="margin: auto;  "  href="{{path('airbnb')}}">
         <img  src="assets/img/logo.png" alt="Site logo">                            
     </a>
     <a  class="btn btn-primary" href="{{path('app_login')}}">Try hosting</a>

     {% endif %}
</nav>

</header>


    <section>
      {% block body %}
 

    {% endblock %}

    </section>
  
        <footer class="tm-bg-dark-blue">
                <div class="container">
                    <div class="row">
                        <p class="col-sm-12 text-center tm-font-light tm-color-white p-4 tm-margin-b-0">
                        Copyright &copy; <span class="tm-current-year">2021</span> MDW 3.1 
                        
                        - Design: AYOUB SRIHA</p>        
                    </div>
                </div>                
            </footer>

    </body>


</html>



